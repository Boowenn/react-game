<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.game.store.mappers.AdminMapper">
    <!--Integer addUser(User user);-->
    <!--
        useGeneratedKeys 开启某(主键)个字段的值递增
        keyProperty 表示将表中的xxx字段作为主键
    -->
    <insert id="addUser" useGeneratedKeys="true" keyProperty="aid">
        INSERT INTO t_admin(
        username,password
        )VALUES (
        #{username},#{password}
        )
    </insert>
    <!--User findUserByUsername(String username);-->
    <!--
        ResultType 表示查询的结果类型
        ResultMap 当表的字段和类的对象属性字段名称不一致时，来自定义结果的映射规则
    -->
    <select id="findUserByUsername" resultType="com.game.store.entity.Admin">
        SELECT * FROM t_admin WHERE username = #{username}
    </select>


    <select id="findUserByUsernameAndPwd" resultType="com.game.store.entity.Admin">
        SELECT * FROM t_admin WHERE username = #{username} and password = #{password}
    </select>


    <!--User findByUid(Integer uid);-->
    <select id="findByUid" resultType="com.game.store.entity.Admin">
        SELECT * FROM t_admin WHERE uid = #{aid}
    </select>

    <!--    Integer updatePasswordByUid(Integer uid,
                                String password,
                                String modifiedUser,
                                Date modifiedTime);-->
    <update id="updatePasswordByUid" >
        UPDATE t_admin SET password=#{password}
                          WHERE uid = #{aid}
    </update>


</mapper>